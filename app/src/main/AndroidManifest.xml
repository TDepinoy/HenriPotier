<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="tdepinoy.henripotier">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_book"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".HenriPotierApplication">

        <activity android:name=".ui.BooksActivity"
            android:label="@string/books_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.CartActivity"
            android:label="@string/cart_title" />

    </application>

</manifest>
