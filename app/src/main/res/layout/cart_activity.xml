<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cart_info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_big"
        android:textAlignment="center"
        android:padding="@dimen/padding_text"
        android:layout_margin="@dimen/margin"
        tools:text="@string/cart_empty"
        />

    <TextView
        android:id="@+id/cart_original_total_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_info_text_view"
        android:textSize="@dimen/text_size_medium"
        android:padding="@dimen/padding_text"
        android:textAlignment="center"
        tools:text="Total avant remise: 25€"/>

    <TextView
        android:id="@+id/cart_total_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_original_total_text_view"
        android:textSize="@dimen/text_size_big"
        android:padding="@dimen/padding_text"
        android:textAlignment="center"
        tools:text="Total: 25€"/>

    <ListView
        android:id="@+id/cart_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cart_total_text_view"/>

    <Button
        android:id="@+id/cart_empty_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_info_text_view"
        android:text="@string/cart_empty_button"
        android:textSize="@dimen/text_size_medium"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_button"
        android:layout_margin="@dimen/margin"
        />

</RelativeLayout>