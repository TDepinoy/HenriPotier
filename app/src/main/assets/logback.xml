<configuration>
    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>[%thread] %logger{36}:%line - %msg%n</pattern>
        </encoder>
        <tagEncoder>
            <pattern>HenriPotier</pattern>
        </tagEncoder>
    </appender>


    <root level="DEBUG">
        <appender-ref ref="LOGCAT" />
    </root>
</configuration>